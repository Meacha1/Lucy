<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="./css/index.css">
    <title>Your Page Title</title>
</head>
<body>
    <div class="logo-container">
        <img src="./images/logo.png" class="logo" alt="Logo">
        <h1>Lucy</h1>
    </div>
    <div class="chat-container">
        <% chatEntries.forEach(entry => { %>
          <div class="<%= entry.type %>-message-container">
            <% if (entry.type === 'ai') { %>
              <img src="./images/<%= entry.type %>.png" class="<%= entry.type %>-icon" alt="<%= entry.type %> Icon">
              <div class="message <%= entry.type %>-message"><%= entry.message %></div>
            <% } else { %>
              <div class="message <%= entry.type %>-message"><%= entry.message %></div>
              <img src="./images/<%= entry.type %>.png" class="<%= entry.type %>-icon" alt="<%= entry.type %> Icon">
            <% } %>
          </div>
        <% }); %>
      </div>
    <form id="myForm" action="/" method="post">
        <input id="textInput" type="text" class="input-field" name="inputField" placeholder="Whatâ€™s happening?">
        <button class="ask-button" type="submit">Ask</button>
    </form>
    <script src="/scripts/main.js"></script>
</body>
</html>
