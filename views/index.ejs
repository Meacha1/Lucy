<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="./css/index.css">
    <script src="https://unpkg.com/prettier/standalone/prettier.min.js"></script>
    <title>Your Page Title</title>
</head>
<body>
    <div class="logo-container">
        <img src="./images/logo.png" class="logo" alt="Logo">
        <h1>Lucy</h1>
    </div>
    <div class="chat-container">
        <% for (const entry of chatEntries) { %>
            <% if (entry.type === 'user') { %>
                <div class="<%= entry.type %>-message-container">
                    <div class="message <%= `${entry.type}-message` %>">
                        <%= entry.message %>
                    </div>
                    <img src="<%= `./images/${entry.type}.png` %>" class="<%= `${entry.type}-icon` %>" alt="<%= entry.type %> icon">
                </div>
            <% } else { %>
                <div class="<%= entry.type %>-message-container">
                    <img src="<%= `./images/${entry.type}.png` %>" class="<%= `${entry.type}-icon` %>" alt="<%= entry.type %> icon">
                    <div class="message <%= `${entry.type}-message` %>">
                        <%= entry.message %>
                    </div>
                </div>
            <% } %>
        <% } %>
    </div>
    <form id="myForm">
        <input id="textInput" type="text" class="input-field" name="content" placeholder="Whatâ€™s happening?">
        <button class="ask-button" type="submit">Ask</button>
    </form>
    <script src="/js/render.js"></script>
</body>
</html>
